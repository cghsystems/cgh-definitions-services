<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:int="http://www.springframework.org/schema/integration"
	xmlns:int-http="http://www.springframework.org/schema/integration/http"
	xsi:schemaLocation="http://www.springframework.org/schema/integration/http http://www.springframework.org/schema/integration/http/spring-integration-http-2.1.xsd
		http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration-2.1.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<int:channel id="responseChannel" />
	<int:channel id="errorChannel" />

	<int-http:inbound-channel-adapter id="defsInboundAdapter"
		channel="responseChannel" error-channel="errorChannel"
		path="/create/id/{id}/name/{name}/definition/{definition}/description/{description}/cat/{cat}"
		supported-methods="GET"
		payload-expression="new net.cghsystems.definitions.model.Definition( 
		          #pathVariables.id, 
		          #pathVariables.name, 
		          #pathVariables.definition, 
		          #pathVariables.description, 
		          #pathVariables.cat )" />

	<int:service-activator input-channel="responseChannel"
		ref="mongoDefinitionRepository" method="save" />
	<int:service-activator input-channel="errorChannel"
		ref="testLogger" method="log" />

	<bean id="testLogger" class="net.cghsystems.definitions.web.ioc.TestLogger" />

	<bean
		class="org.springframework.integration.http.inbound.UriPathHandlerMapping" />

</beans>
